<%= form_for(calificacion, :remote => true, :html => {:class => "generic-form", :id => "forma_calificacion_#{curso_profesor_id}"}) do |f| %>
  <%= f.error_messages %>

	<div class="unit">
		<div class="on-2 columns">
			<div class="column">
				<%= f.label :puntualidad %><br />
				<%= rating_stars f, :puntualidad %>
			</div>
			<div class="column">
				<%= f.label :amigable %><br />
		    <%= rating_stars f, :amigable %>
			</div>
		</div>
		<br />
		<div class="on-2 columns">
			<div class="column">
				<%= f.label :conocimiento %><br />
		    <%= rating_stars f, :conocimiento %>
			</div>
			<div class="column">
				<%= f.label :claridad %><br />
		    <%= rating_stars f, :claridad %>
			</div>
		</div>
		<br />
		<div class="on-2 columns">
			<div class="column">
				<%= f.label :flexibilidad %><br />
		    <%= rating_stars f, :flexibilidad %>
			</div>
			<div class="column">
				<%= f.label :facilidad %><br />
		    <%= rating_stars f, :facilidad %>
			</div>
		</div>
		<br />
		<div class="on-2 columns">
			<div class="column">
				
			</div>
			<div class="column">
				<%= f.label :calificacion_obtenida, "¿Qué calificación obtuviste en la materia?" %><br />
		    <%= f.text_field :calificacion_obtenida %>
			</div>
		</div>
		<br />
		<div id="name">
			<%= f.label :critica %><br />
	    <%= f.text_area :critica, :rows => 5 %>
		</div>
	</div>
    
    <%= f.hidden_field :curso_profesor_id, :value => curso_profesor_id %>
  <div class="actions_calificar">
    <%= f.submit "Calificar" %>
  </div>
<% end %>
