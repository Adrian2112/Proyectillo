<% content_for :header do %>
	<h2>Actualiza tu perfil <%= @usuario.username %></h2>
<% end %>


<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:class => "generic-form"}) do |f| %>
  <%= devise_error_messages! %>
  <div>
    <%= f.label :username, 'Nombre de usuario' %><br />
    <%= f.text_field :username %>
  </div>
<br />
  <div>
    <%= f.label :email, 'Correo electrónico' %><br />
    <%= f.text_field :email %>
  </div>
<br />
	<%= render 'universidad_campus_fields', :f => f %>


  <% if !current_usuario.has_no_password? %>
    <div><%= f.label :password, 'Contraseña'%> <i>(Deja el campo en blanco si no quieres cambiarla)</i><br />
    <%= f.password_field :password %></div>
		<br />
    <div><%= f.label :password_confirmation, 'Confirma tu contraseña' %><br />
    <%= f.password_field :password_confirmation %></div>
		<br />
    <div><%= f.label :current_password, 'Contraseña actual' %> <i>(Necesitamos tu contraseña actual para guardar tus cambios)</i><br />
    <%= f.password_field :current_password %></div>
  <% end %>
	<br />
  <div><%= f.submit "Guardar" %></div>
  
<% end %>

<br/>
<h3>¿Insatisfecho?</h3>

<p><%= link_to "Cancelar mi cuenta", registration_path(resource_name), :confirm => "¿Seguro que deseas cancelar?", :method => :delete %></p>
<br/>