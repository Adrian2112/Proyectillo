<% title "Registrate" %>

<p/>
Puedes registrarte con <br/>
<%= link_to 'Twitter', "/auth/twitter", :id => "twitter_login"%> |
<%= link_to 'Facebook', "/auth/facebook", :id => "facebook_login"%> <br/>
</p><br/>

<p>¿Ya estas registrado? <%= link_to "Inicia Sesión", new_usuario_session_path %></p><br/>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  
  <% if @usuario.username == nil %>
  <p>
    <%= f.label :username, 'Nombre de usuario' %><br />
    <%= f.text_field :username %>
  </p>
  <% end %>

  <p>
    <%= f.label :email, 'Correo Electrónico' %><br />
    <%= f.text_field :email %>
  </p>
	
	<%= render 'universidad_campus_fields', :f => f %>

  <% if @usuario.password_required? %>
  <p>
    <%= f.label :password, 'Contraseña' %><br />
    <%= f.password_field :password %>
  </p>
  <p>
    <%= f.label :password_confirmation, "Confirma tu contraseña" %><br />
    <%= f.password_field :password_confirmation %>
  </p>
<% end %>


  <p><%= f.submit "Regístrate" %></p>
<% end %>

<%= render :partial => "devise/shared/links" %>
