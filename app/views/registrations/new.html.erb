<% title "Registrate" %>

<p>¿Ya estas registrado? <%= link_to "Inicia Sesión", new_usuario_session_path %>.</p>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  
  <% if @usuario.username == nil %>
  <p>
    <%= f.label :username, 'Nombre de usuario' %><br />
    <%= f.text_field :username %>
  </p>
  <% end %>

  <% if @usuario.email == nil %>
  <p>
    <%= f.label :email, "Email" %><br />
    <%= f.text_field :email %>
  </p>
  <% end %>
	
	<%= render 'universidad_campus_fields', :f => f %>

  <% if @usuario.password_required? %>
  <p>
    <%= f.label :password, 'Contraseña' %><br />
    <%= f.password_field :password %>
  </p>
  <p>
    <%= f.label :password_confirmation, "Confirma tu contraseña" %><br />
    <%= f.password_field :password_confirmation %>
  </p>
<% end %>


  <p><%= f.submit "Registrate" %></p>
<% end %>

<%= render :partial => "devise/shared/links" %>
