<% if !show_more.empty? and !show_more.last_page? %>
  <br/>
  <center>
    <div id="loading" style="display:none;"><%= image_tag 'ajax-loader.gif' %></div>
    <%= link_to_function "Mas Resultados", "load_more($('#page').val(), #{hasht_to_js_hash(parametros)}, '#{url}');", :id => "mas" %>
  </center>
<% end %>

<%= hidden_field_tag 'page', params[:page] || 2 %>