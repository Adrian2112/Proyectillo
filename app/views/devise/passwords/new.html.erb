<% content_for :header do %>
	<h2>¿Olvidaste tu password?</h2>
<% end %>


<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, :class => "generic-form" }) do |f| %>
  <%= devise_error_messages! %>

  <div><%= f.label :email, 'Correo electrónico' %><br />
  <%= f.text_field :email %></div>
	<br />
  <div><%= f.submit "Enviar contraseña" %></div>
<% end %>
<br />
<%= render :partial => "devise/shared/links" %>
