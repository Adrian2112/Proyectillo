<% content_for :header do %>
  <h1>Cursos en <%= @campus.nombre %></h1>
<% end %>

<div id="info-campus" class="columns on-2">
  <div class = "column">
    <h3><%= @campus.universidad.nombre %> - <%= @campus.nombre %></h3>
    <p><i>Estado: <%= @campus.estado %></i></p>
    <p><i>Ciudad: <%= @campus.ciudad %></p></i><br/>
  </div>
  <div class="column">
    <br />
    <p><center>Â¿No encontraste lo que buscabas?</p>  
    <h3 class="sign_up_header"><%= link_to 'Registra un curso', new_campus_curso_path(@campus), :name => nil if can? :create, Curso  %></center></h3>
  </div>
</div>
    

<h3>Mostrando <span id="resultados_cursos"><%= pluralize(@cursos.size, "curso") %></span></h3>
<br />

<div id="listado">
	<%= render @cursos %>
</div>
<br />

<div id="next_link">
  <%= render :partial => 'shared/show_more', :object => @cursos,
              :locals => { :url => mas_resultados_campus_cursos_path(@campus, :js), :parametros => { :page => "page" } } %>
</div>
