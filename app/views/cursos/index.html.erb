<% content_for :header do %>
  <h1>Cursos en <%= @campus.nombre %></h1>
<% end %>

<h3><%= @campus.universidad.nombre %> - <%= @campus.nombre %></h3>
<p><i>Estado: <%= @campus.estado %></i></p>
<p><i>Ciudad: <%= @campus.ciudad %></p></i><br/>

<h3>Existen <span id="resultados_cursos"><%= @cursos.size %></span> cursos</h3>
<br />

<div id="listado">
	<%= render @cursos %>
</div>
<br />

<%= link_to 'Reigstra un curso', new_campus_curso_path(@campus) if can? :create, Curso %>
