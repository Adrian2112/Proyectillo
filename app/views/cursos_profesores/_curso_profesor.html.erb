<div class="columns on-3 profesor-entry">
  <div class="container wrapper">
    <div class="column fixed image" style="width: 172px">
      <div class="container">
        <%# link_to (image_tag curso_profesor.profesor.avatar_url(:thumb).to_s), profesor_path(curso_profesor.profesor) %>
      </div>
    </div>
    <div class="column fixed info" style="width: 415px">
      <div class="container">
        <h3>
          <% if can? :read, curso_profesor.profesor %>
            <%= link_to curso_profesor.profesor.nombre , profesor_path(curso_profesor.profesor, :anchor => "curso_profesor_#{curso_profesor.curso.id}_#{curso_profesor.profesor.id}") %>
          <% end %>
        </h3>
        <h4>
          <%= link_to curso_profesor.curso, profesor_path(curso_profesor.profesor, :anchor => "curso_profesor_#{curso_profesor.curso.id}_#{curso_profesor.profesor.id}") %>
        </h4>
        <%= link_to 'Edit', edit_profesor_path(curso_profesor.profesor) if can? :edit, curso_profesor.profesor %>
        <div class="universidades">
          <%= link_to curso_profesor.profesor.universidad.nombre, universidad_path(curso_profesor.profesor.universidad) %> &gt; 
          <%= link_to curso_profesor.profesor.campus.nombre, campus_path(curso_profesor.profesor.campus) %>
        </div>
      </div>
    </div>
    <div class="column fixed rating" style="width: 121px">
      <div class="container">
        <div class="calif">
          <div class="label">Calificaci&oacute;n</div>
          <div class="amount"><%= curso_profesor.promedio_general %></div>
        </div>
        <div class="calif resen">
          <div class="label">Rese&ntilde;as</div>
          <div class="amount"><%= curso_profesor.calificaciones.size %></div>
        </div>
      </div>
    </div>
  </div>
</div>
