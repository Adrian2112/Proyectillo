$("#listado").html("<%= escape_javascript(render @universidades)%>");
$("#next_link").html("<%= escape_javascript(render :partial => 'shared/show_more',
													:object => @universidades, :locals => { :url => mas_universidades_universidades_path(:js), :parametros => { :universidad_q => 'universidad_q', :page => 'page'  } } ) %>");
$("#page").val(<%= @universidades.current_page + 1 %>);

<% if @universidades.current_page >= @universidades.num_pages %>
  $("#next_link").css("display", "none");
<% else %>
   $("#next_link").css("display", "block");
<% end %>
