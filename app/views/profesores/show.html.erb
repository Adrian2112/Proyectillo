<div id="promedio" style="float:right"><h3>Promedio: <%= @profesor.promedio %></h3></div>

<p>
	<%= image_tag @profesor.avatar_url(:thumb).to_s unless @profesor.avatar_url.nil? %>
</p>

<p>
  <b>Nombre:</b>
  <%= @profesor.nombre %>
</p>

<p>
  <b>Apellido materno:</b>
  <%= @profesor.apellido_materno %>
</p>

<p>
  <b>Apellido paterno:</b>
  <%= @profesor.apellido_paterno %>
</p>

<p>
  <b>Campus:</b>
  <%= @profesor.campus.nombre %>
</p>
<br />
<% if @profesor.cursos.empty? %>
	<h3>No hay cursos de este profesor</h3>
	<%= link_to "Asignar a un curso" %>
<% else %>
	<ul id="cursos">
	<% @profesor.cursos.each do |curso| %>
		<li><%= link_to_function curso.nombre, "cargar_curso_profesor(#{@profesor.id}, #{curso.id})" %></li>
	<% end %>
	</ul>
<% end %>
<br />

<div id="loadingDiv" class="test">
	<%= image_tag 'ajax-loader.gif' %>
</div>
<div id="curso_profesor" style="display:none;"></div>

<%= link_to 'Edit', edit_profesor_path(@profesor) if can? :edit, @profesor  %>
<%= link_to 'Back', profesores_path %>
