<% content_for :header do %>
  <h1>Profesores</h1>
<% end %>

<div id="info-profesores" class="columns on-2">
  <div class="column">
    <% form_tag(profesores_path, :method => :get, :autocomplete => "off", :class => "generic-form") do  %>
	    <%= text_field_tag :profesor_q %>
	    <%= submit_tag "Buscar Profesor", :name => nil %>
	    <%= image_tag 'ajax-loader.gif', :class => "loading", :style => "display:none;" %>
    <% end %>
  </div>
  <div class="column">
    <p><center>¿No encontraste lo que buscabas?</p>  
    <% if !usuario_signed_in? %>
      <h3 class="sign_up_header"><%= link_to 'Regístrate para agregar un profesor', new_usuario_session_path %></center></h3>
    <% else %>
      <h3 class="sign_up_header"><%= link_to 'Registra a un profesor', new_profesor_path if can? :create, Profesor  %></center></h3>
    <% end %>
  </div>
</div>
<br />

<h3>Se encontraron <span id="resultados_profesor"><%= @profesores.total_count %></span> resultados</h3>
<br />

<div id="listado">
	<%= render @profesores %>
</div>
<br />

<div id="next_link">
  <%= render :partial => 'shared/show_more', :object => @profesores,
              :locals => { :url => "/profesores/mas_resultados.js", :parametros => { :profesor_q => :profesor_q, :page => :page } } %>
</div>

