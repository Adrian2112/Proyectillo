<h1>Listing campus</h1>

<table>
  <tr>
    <th>Nombre</th>
    <th>Ciudad</th>
    <th>Estado</th>
    <th>Universidad</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @campus.each do |campus| %>
  <tr>
    <td><%= campus.nombre %></td>
    <td><%= campus.ciudad %></td>
    <td><%= campus.estado %></td>
    <td><%= campus.universidad_id %></td>
    <td><%= link_to 'Show', campus if can? :read, campus %></td>
    <td><%= link_to 'Edit', edit_campus_path(campus) if can? :edit, campus %></td>
    <td><%= link_to 'Destroy', campus, :confirm => 'Are you sure?', :method => :delete if can? :destroy, campus %></td>
  </tr>
<% end %>
</table>

