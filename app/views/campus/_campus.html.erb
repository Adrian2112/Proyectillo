<div class="columns on-3 profesor-entry">
  <div class="container wrapper">
    <div class="column fixed image" style="width: 250px">
      <div class="container">
      </div>
    </div>
    <div class="column fixed info" style="width: 200px">
      <div class="container">
        <h3>
          <% if can? :read, campus %>
            <%= link_to truncate(campus.nombre, :length => 23), campus_cursos_path(campus), :title => campus.nombre, :class => "tooltip" %>
          <% end %>
        </h3>
      </div>
    </div>
    <div class="column fixed place" style= "width: 300px">
      <div class="container">
        <h2><%= campus.ciudad %>, <%= campus.estado %></h2>
      </div>
    </div>
  </div>
</div>
